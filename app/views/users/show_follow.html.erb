<h3><%= @title %></h3>

<% if @title != "フォロー" %>
<ul>
  <% @user.following_users.each do |user| %>
    <li><%= link_to user.name, user %></li>
  <% end %>
</ul>
<% end %>

<% if @title != "フォロワー" %>
<ul>
  <% @user.follower_users.each do |user| %>
    <li><%= link_to user.name, user %></li>
  <% end %>
</ul>
<% end %>

<% if current_user != @user %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>

